@model Collection
@{
    ViewData["Title"] = "Movie Collection";
}

<div class="text-center">
    <h1> Become a Movie Collector Yourself!</h1>
</div>

<div class="movie-form-wrap">
    <form method="post" class="movie-form">
        <div asp-validation-summary="All" class="validation-summary"></div>

        <label asp-for="CategoryId">Category:</label>
        <select asp-for="CategoryId" required>
            <option value="">--- Select a Category ---</option>
            @foreach (Categories c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select>
        <span asp-validation-for="CategoryId" class="field-validation"></span>
        
        <input type="hidden" asp-for="MovieId" />

        <label asp-for="Title">Title:</label>
        <input asp-for="Title" required />
        <span asp-validation-for="Title" class="field-validation"></span>

        <label asp-for="Year">Year:</label>
        <input asp-for="Year" type="number" min="1888" step="1" required />
        <span asp-validation-for="Year" class="field-validation"></span>

        <label asp-for="Director">Director:</label>
        <input asp-for="Director" />
        <span asp-validation-for="Director" class="field-validation"></span>

        <label asp-for="Rating">Rating:</label>
        <select asp-for="Rating">
            <option value="">-- Select --</option>
            <option value ="G">G</option>
            <option value ="PG">PG</option>
            <option value ="TV-PG">TV-PG</option>
            <option value ="TV-Y7">TV-Y7</option>
            <option value ="PG-13">PG-13</option>
            <option value ="TV-14">TV-14</option>
            <option value ="R">R</option>
            <option value ="NR">NR</option>
            <option value ="UR">UR</option>
        </select>
        <span asp-validation-for="Rating" class="field-validation"></span>

        <label asp-for="Edited">Edited:</label>
        <select asp-for="Edited">
            <option value="">-- Select --</option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <span asp-validation-for="Edited" class="field-validation"></span>

        <label asp-for="LentTo">Lent To:</label>
        <input asp-for="LentTo" />
        <span asp-validation-for="LentTo" class="field-validation"></span>

        <label asp-for="CopiedToPlex">Copied to Plex:</label>
        <select asp-for="CopiedToPlex">
            <option value="">-- Select --</option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <span asp-validation-for="CopiedToPlex" class="field-validation"></span>

        <label asp-for="Notes">Notes:</label>
        <input asp-for="Notes" maxlength="25" />
        <span asp-validation-for="Notes" class="field-validation"></span>

        <button type="submit">Submit</button>
    </form>
</div>

@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}
